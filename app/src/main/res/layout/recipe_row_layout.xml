<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/recipeImage"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/txtRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:hint="Recipe Name"
        android:textColor="@color/colorTextPrimary"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/icoServings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRecipeName"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:src="@drawable/ic_servings_24dp"
        android:tint="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/txtServings"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/txtRecipeName"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:hint="Servings" />

    <ImageView
        android:id="@+id/icoTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/icoServings"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:src="@drawable/ic_clock_24dp"
        android:tint="@color/colorTextSecondary" />

    <TextView
        android:id="@+id/txtTime"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/txtServings"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/recipeImage"
        android:hint="Time" />

</RelativeLayout>